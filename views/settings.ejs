<!DOCTYPE html>
<html>
<% include header.ejs %>
<body>
  <div class="container">

    <% if(locals.error){ %>
      <div class="alert alert-dismissible alert-warning">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>Oops! <%= error %></strong>
      </div>
    <% } %>

    <% if(locals.success){ %>
      <div class="alert alert-dismissible alert-success">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong><%= success %></strong>
      </div>
    <% } %>

    <div class="well col-lg-6">
      <form class="form-horizontal" action="/settings" method="POST">
        <fieldset>
          <legend>Settings</legend>
          <div class="form-group">
            <label for="inputUsername" class="col-lg-2 control-label">Username</label>
            <div class="col-lg-10">
              <input type="text" class="form-control" name="username" placeholder="Username" value="<%= locals.user.username %>">
            </div>
          </div>
          <div class="form-group">
            <label for="inputPassword" class="col-lg-2 control-label">Password</label>
            <div class="col-lg-10">
              <input type="password" class="form-control" name="password" placeholder="Password">
            </div>
          </div>
          </br>
          <div class="form-group">
            <label for="inputEmail" class="col-lg-2 control-label">Email</label>
            <div class="col-lg-10">
              <input type="text" class="form-control" name="email" placeholder="Email" value="<%= locals.user.email %>">
            </div>
          </div>
          <div class="form-group">
            <label for="textArea" class="col-lg-2 control-label">Info.</label>
            <div class="col-lg-10">
              <textarea class="form-control" rows="3" name="info"><%= locals.user.info %></textarea>
              <span class="help-block">This will be display on your profile page.</span>
            </div>
          </div>
          <div class="form-group">
            <label for="deleteUser" class="col-lg-2 control-label">Delete Account</label>
            <div class="col-lg-10">
              <button type="delete" class="btn btn-danger">Delete Account</button>
              <span class="help-block">You will lose all of your data.</span>
            </div>
          </div>
          <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
              <button type="reset" onclick="javascript:location.href='/'" class="btn btn-default">Cancel</button>
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </div>
        </fieldset>
      </form>
    </div>
  </div>
</body>
</html>
